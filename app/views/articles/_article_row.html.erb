<tr>
  <td><%= article.title%></td>
  <td><%= link_to 'show',article_path(article),data: {bs_toggle: 'modal',bs_target:"#showModal", remote: true }%></td>
  <td><%= link_to 'edit' , edit_article_path(article), data: {bs_toggle: 'model', bs_target:'#editModal', remote: true }%></td>
  <td><%=link_to 'delete', article_path(article), method: :delete, remote: true%></td>
</tr>

<!-- Modal SHOW-->
<div class="modal fade" id="showModal" tabindex="-1" role="dialog" aria-labelledby="showModal" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="showModal">show Details</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>
         <b>Title</b>: <%= article.title %>
        </div>
        <div>
         <b>Description</b>:   <%= article.description %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button
      </div>
    </div>
  </div>
</div>




